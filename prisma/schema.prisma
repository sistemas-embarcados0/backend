generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // **************** SUBSTITUIR PELO MONGODB ****************
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  password_hash String

  // Relacionamento 1:N
  registers Register[]

  @@map("users")
}

model Room {
  id              String            @id @default(uuid())
  // Relacionamento 1:N
  airconditioners AirConditioning[]
  doors           Door[]
  lights          Light[]

  @@map("rooms")
}

model Door {
  id        String  @id @default(uuid())
  activated Boolean @default(false)

  // Chave estrangeira
  roomId String
  // Relacionamento 1:N com Room
  room   Room   @relation(fields: [roomId], references: [id])

  @@map("doors")
}

model Light {
  id        String  @id @default(uuid())
  activated Boolean @default(false)

  // Chave estrangeira
  roomId String
  // Relacionamento 1:N com Room
  room   Room   @relation(fields: [roomId], references: [id])

  @@map("lights")
}

model AirConditioning {
  id        String  @id @default(uuid())
  activated Boolean @default(false)

  // Chave estrangeira
  roomId String
  // Relacionamento 1:N com Room
  room   Room   @relation(fields: [roomId], references: [id])

  @@map("airconditioners")
}

model Register {
  id               String   @id @default(uuid())
  modificationDate DateTime @default(now())

  // Chave estrangeira
  userId String
  // Relacionamento 1:N com User
  user   User   @relation(fields: [userId], references: [id])

  @@map("registers")
}
